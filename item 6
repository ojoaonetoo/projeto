<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>item 6</title>
</head>
<body>
<script>
  var X = parseInt(prompt("Digite o nº do produto que você quer:"))
  var total = parseInt(prompt("quantos você vai querer: "))
  var val1 = 1.70
  var val2 = 2.30
  var val3 = 2.60
  var val4 = 2.40
  var val5 = 2.50
  var val6 = 1.0

  var prec1 = val1 * total
  var prec2 = val2 * total
  var prec3 = val3 * total
  var prec4 = val4 * total
  var prec5 = val5 * total
  var prec6 = val6 * total

  switch(X){
    case 100: document.write("valor a pagar: "+prec1);
    break;
    case 101: document.write("valor a pagar: "+prec2)
    break;
    case 102: document.write("valor a pagar: "+prec3);
    break;
    case 103: document.write("valor a pagar: "+prec4);
    break;
    case 104: document.write("valor a pagar: "+prec5);
    break;
    case 105: document.write("valor a pagar: "+prec6);
    break;
    default: alert("Produto nao encontrado!!!");
    document.write("!!!!!!")
  }
</script>
</body>
</html>
